                    <deploymentZone>9</deploymentZone>
                    <deploymentZone>10</deploymentZone>
                </deploymentZones>
                <destinationZone>5</destinationZone>
                <fixedUnitCount>0</fixedUnitCount>
                <forceAlignment>0</forceAlignment>
